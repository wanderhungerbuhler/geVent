generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id        String    @id @default(uuid())
  full_name String
  email     String
  cpf       String
  tickets   Tickets[]

  @@map("users")
}

model Tickets {
  id          String    @id @default(uuid())
  img_url     String
  title       String
  price       String
  description String
  date        String
  usersId     String?
  Users       Users?    @relation(fields: [usersId], references: [id])
  category    Category?

  @@map("tickets")
}

model Category {
  id        String  @id @default(uuid())
  name      String
  ticketsId String  @unique
  tickets   Tickets @relation(fields: [ticketsId], references: [id])

  @@map("category")
}
